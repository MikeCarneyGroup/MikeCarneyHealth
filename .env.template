# Minimum required for local development

# Authentication (NextAuth.js)
# Generate secret with: openssl rand -base64 32
AUTH_SECRET="your-secret-here"
AUTH_TRUST_HOST="true"

# Database (Neon Postgres or local PostgreSQL)
POSTGRES_URL="postgresql://user:password@localhost:5432/wellbeing"
# For Neon: Use the connection string from your Neon dashboard
# POSTGRES_URL="postgresql://user:password@host.neon.tech/dbname?sslmode=require"

# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email (Mailgun)
# Get credentials from: https://app.mailgun.com/
MAILGUN_API_KEY="your-mailgun-api-key"
MAILGUN_DOMAIN="your-domain.com"
MAILGUN_FROM_EMAIL="noreply@your-domain.com"

# Vercel Blob Storage
# Get token from: Vercel Dashboard > Storage > Blob
BLOB_READ_WRITE_TOKEN="your-blob-token"

# Google Analytics (Optional)
# Get your Measurement ID from: https://analytics.google.com/
# Format: G-XXXXXXXXXX
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Azure AD (Optional - for Microsoft 365 login)
# AUTH_AZURE_AD_ID="your-azure-client-id"
# AUTH_AZURE_AD_SECRET="your-azure-client-secret"
# AUTH_AZURE_AD_TENANT_ID="common"
